<div class="mt-64 data-cnt">
  <header class="py-16 text-center bg-x0030">
    <h2 class="text-xf">
      <strong class="text-24">Login</strong>
    </h2>
  </header>
  <form method="POST" action="<%- urlFuns.page('account', 'profile') %>" class="py-48 bg-x1241">
    <ul class="mx-auto space-y-32 w-6/12">
      <%
        const form = [{
          title: 'Username',
          formType: 'text',
          validate : `{'req': 'This field is required.', 'name': {'min': 6, 'max': 20, 'msg': 'Must be $min - $max character include letter.'}}`
        }, {
          title: 'Password',
          formType: 'password',
          classCtrl: 'jNewPas',
          validate : `{'req': 'This field is required.', 'password': {'min': 6, 'max': 20, 'msg': 'Password must contain $min - $max more characters with a mix of letters number.'}}`
        }]
      -%>
      <% for( let i = 0; i < form.length; i += 1 ) { -%>
        <% const { title, formType, classCtrl, validate } = form[i]; -%>
        <li class="flex">
          <b class="w-1/4 leading-32 text-right text-xf"><%- title %></b>
          <div class="m-form ml-32 flex-grow jForm">
            <div class="m-form-item">
              <div class="m-form-elem">
                <% if ( formType !== 'checkbox' && formType !== 'radio' && formType !== 'select' && formType !== 'textarea' ) { %>
                  <input type="<%- formType %>" class="m-form-type <%- classCtrl %>"<%- validate ? ` :validate="${validate}"` : '' %>>
                <% } -%>
              </div>
            </div>
            <span class="m-form-error jFormError"></span>
          </div>
        </li>
      <% } -%>
      <li class="text-center">
        <button type="submit" class="m-btn --green jSubmit">
          <b class="px-68 block">Sign In</b>
        </button>
      </li>
    </ul>
  </form>
</div>