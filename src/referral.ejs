<div class="referral min-h-screen py-80">
  <div class="referral-bd mx-auto w-650">
    <div class="qrcode py-32 bg-x3368 rounded-8">
      <%- require('component/img.ejs')({
        style: {
          main: 'mx-auto w-170 h-170 bg-xf rounded-8',
          img: 'w-full h-full'
        },
        path: 'https://upload.wikimedia.org/wikipedia/commons/thumb/4/4e/QRcode_image.svg/440px-QRcode_image.svg.png',
        alt: 'qrCode'
      }) %>
      <div class="mt-32 mx-auto w-8/12 overflow-hidden">
        <ul class="-mx-10 flex items-center">
          <li class="px-10 w-1/2">
            <button type="button" class="m-btn --green w-full jCopy" data-link="copy_url">
              <b>COPY LINK</b>
            </button>
          </li>
          <li class="px-10 w-1/2">
            <a href="<%- require('referral/background.jpg') %>" class="m-btn --green w-full" download="qrCode.jpg">
              <b>COPY QRCODE</b>
            </a>
          </li>
        </ul>
      </div>
      <div class="mt-16 text-center">
        <button type="button" class="jRulesCtrl">
          <em class="not-italic text-16 text-x88a1 underline">Referral Program Rules</em>
        </button>
      </div>
    </div>
    <div class="tab mt-32 jSwich">
      <div class="tab-hd">
        <ul class="mx-14 flex items-center">
          <% const tabs = [{
            name: 'Referral'
          }, {
            name: 'Hisroty'
          }, {
            name: 'Diagram'
          }] -%>
          <% for( let i = 0; i < tabs.length; i += 1 ) { -%>
            <% const { name } = tabs[i]; -%>
            <li class="tab-item<%- i === 0 ? ' active' : '' %> px-2">
              <button type="button" class="tab-button px-20 py-10 transition-bg-color rounded-t-4 rounded-r-4 block min-w-100 jSwichBtn">
                <b><%- name %></b>
              </button>
            </li>
          <% } -%>
        </ul>
      </div>
      <div class="tab-bd py-24 rounded-8 bg-x3368 overflow-hidden">
        <ul class="whitespace-no-wrap inline-space transition-transform jSwichSlide">
          <li class="px-20 w-full inline-block align-top">
            <p class="text-xf text-center">
              <b class="text-24">Youâ€™ve been rewared $0.00!</b>
            </p>
            <div class="mt-48 text-center">
              <ul class="flex items-center">
                <%
                  const rewared = [{
                    title: 'Total',
                    msg: '$0.00',
                    icon: 'money_circle',
                  }, {
                    title: 'Redeemable',
                    msg: '$0.00',
                    icon: 'money_arrow',
                  }, {
                    title: 'Redeemed',
                    msg: '$0.00',
                    icon: 'list',
                  }]
                -%>
                <% for( let i = 0; i < rewared.length; i += 1 ) { -%>
                  <% const { title, msg, icon } = rewared[i]; -%>
                  <li class="mt-4 flex flex-col-reverse flex-1">
                    <div class="space-y-8 text-xf">
                      <p class="text-24"><%- title %></p>
                      <p class="text-24"><%- msg %></p>
                    </div>
                    <%- require('component/svg.ejs')({
                      style: {
                        main: 'mx-auto text-x88a1 w-54 h-54'
                      },
                      svgName: icon
                    }) %>
                  </li>
                <% } -%>
              </ul>
            </div>
          </li>
          <li class="px-20 w-full inline-block align-top">
            <table class="m-table w-full">
              <thead>
                <tr>
                  <th class="text-center">
                    <b class="text-12">Request Amount</b>
                  </th>
                  <th class="text-center">
                    <b class="text-12">Approved Amount</b>
                  </th>
                  <th class="text-center">
                    <b class="text-12">Remark</b>
                  </th>
                  <th class="text-center">
                    <b class="text-12">Request Date</b>
                  </th>
                  <th class="text-center">
                    <b class="text-12">Status</b>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-x1241">
                <tr>
                  <td class="text-center">
                    <p class="text-12">Request Amount</p>
                  </td>
                  <td class="text-center">
                    <p class="text-12">Approved Amount</p>
                  </td>
                  <td class="text-center">
                    <p class="text-12">Remark</p>
                  </td>
                  <td class="text-center">
                    <p class="text-12">Request Date</p>
                  </td>
                  <td class="text-center">
                    <p class="text-12">Status</p>
                  </td>
                </tr>
              </tbody>
            </table>
          </li>
          <li class="px-20 w-full inline-block align-top">
            Diagram content
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
